= partial ("header")

.wrapper
  %h3= t.main.intro
  %h1= t.main.headline
  %h2= t.main.tagline
  
.browsers
  .wrapper
    %p= t.main.ie6

    %a.chrome{ :href => "https://www.google.com/intl/#{@locale}/chrome/browser/", :target => "_blank" } Google Chrome
    %a.firefox{ :href => "http://www.firefox.com", :target => "_blank" } Mozilla Firefox
    %a.opera{ :href => "http://www.opera.com/download", :target => "_blank" } Opera
.wrapper
  .meh
    %a.icon{ :href => "http://windows.microsoft.com/en-US/internet-explorer/downloads/ie", :target => "_blank" }
    %p= t.main.ie_lover
    
  .social
    %ul
      %li.twitter
        :plain
          <a href="http://twitter.com/share" class="twitter-share-button" data-url="http://abetterbrowser.org" data-text="It's time we put Internet Explorer in the recycle bin. Choose a better browser." data-count="horizontal" data-via="abetterbrowser" data-related="ejc">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
      %li.google
        :plain
          <g:plusone size="medium" annotation="inline"></g:plusone>
      %li.facebook
        :plain
          <div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#appId=252966201401275&amp;xfbml=1"></script><fb:like href="http://www.facebook.com/pages/A-Better-Browser/250509481647978" send="true" layout="button_count" send="false" width="450" show_faces="false" font=""></fb:like>

= partial ("footer")